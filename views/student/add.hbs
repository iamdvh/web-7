<div class="container">

<form action="/student/add" method="post">
  <h1 >Add new student</h1>
  <div class="form-gourp mb-3 bt-3">
    <label for="name" class="text-primary">Name</label>
    <input
      class="form-control"
      type="text"
      name="name"
      id=""
      required
      minlength="3"
      maxlength="30"
    />
  </div>
  <div class="form-gourp">
    <label for="dob" class="text-primary">Day Of Birth</label>
    <input class="form-control" type="date" name="dob" id="" /> 
  </div>
  <div class="form-gourp mt-3 mb-3">
    <label for="gender" class="text-primary">Gender</label>
    <input type="radio" name="gender" value="Male" />
    Male
    <input type="radio" name="gender" value="Female" />Female
  </div>
  <div class="form-gourp">
    <label for="gpa" class="text-primary">GPA</label>
    <input class="form-control" type="number" name="gpa" id="" min="0" max="10" />
  </div>
  <div class="form-gourp mt-3 mb-3">
    <label for="image" class="text-primary">Image</label>
    <input class="form-control" type="url" name="image" id="" />
  </div>
  </div>
  <div class="form-gourp text-center">
    <input class="btn btn-primary" type="submit" value="Add">
    <input class="btn btn-success" type="reset" value="Clear">
  </div>

</form>
</div>